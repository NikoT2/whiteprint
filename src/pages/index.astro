---
import Layout from "../layouts/Layout.astro";

const projects = [
  {
    id: 1,
    title: "Man and Space",
    category: "Private Project",
    image: "/src/assets/IMG_5209.jpeg",
    link: "/projects/man-and-space",
    fit: "fill",
  },
  {
    id: 2,
    title: "NOW",
    category: "Commercial",
    image: "/src/assets/IMG_5213.jpeg",
    link: "/projects/now",
    fit: "fill",
  },
  {
    id: 3,
    title: "JPG Culture of Printing",
    category: "Commercial",
    image: "/src/assets/IMG_5197.jpeg",
    link: "/projects/jpg-culture-of-printing",
    fit: "contain",
  },
  {
    id: 4,
    title: "Banksy",
    category: "Commercial",
    image: "/src/assets/IMG_5226.jpeg",
    link: "/projects/banksy",
    fit: "contain",
  },
];
---

<Layout>
  <div class="max-w-6xl mx-auto px-6 py-12">
    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-2 gap-8">
      {
        projects.map((project) => (
          <div class="group cursor-pointer">
            <a href={project.link} class="block">
              <h3 class="text-base font-bold text-black uppercase tracking-wide mb-2 group-hover:opacity-70 transition-colors">
                {project.title}
              </h3>
              <div class="aspect-[16/9] overflow-hidden relative">
                <img
                  src={project.image}
                  alt={project.title}
                  class="absolute inset-0 w-full h-full object-cover blur-xl scale-110"
                />
                <img
                  src={project.image}
                  alt={project.title}
                  class={`relative w-full h-full object-${project.fit} group-hover:scale-105 transition-transform duration-300`}
                />
              </div>
            </a>
          </div>
        ))
      }
    </div>
  </div>
</Layout>
