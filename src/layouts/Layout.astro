---
import "../styles/global.css";

const currentPath = Astro.url.pathname;
---

<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />
    <title>SILVERFIELD</title>
  </head>
  <body class="bg-white min-h-screen">
    <header class="border-b border-black py-6">
      <div class="max-w-6xl mx-auto px-6">
        <div class="flex justify-between items-center">
          <div class="flex flex-col">
            <a
              class="text-base cursor-pointer hover:opacity-70 font-bold text-black uppercase tracking-wide"
              href="/"
            >
              SILVERFIELD
            </a>
            <div
              class={`w-26 h-0.5  ${currentPath === "/" ? "bg-black" : "bg-white"}`}
            >
            </div>
            <a
              class="hover:opacity-70 cursor-pointer text-base font-bold text-black"
              href="mailto:Nikolas@Silverfield.com">Nikolas@Silverfield.com</a
            >
          </div>
          <nav class="hidden md:flex space-x-8">
            <a
              href="/about"
              class={`text-lg font-extrabold text-black uppercase tracking-wide hover:opacity-70 relative border-b-2 ${
                currentPath.startsWith("/about")
                  ? " border-black"
                  : "border-white"
              }`}>About</a
            >
            <a
              href="/commercials"
              class={`text-lg font-extrabold text-black uppercase tracking-wide hover:opacity-70 relative border-b-2 ${
                currentPath.startsWith("/commercials")
                  ? " border-black"
                  : "border-white"
              }`}>Commercials</a
            >
            <!-- <a
              href="/short-films"
              class={`text-lg font-extrabold text-black uppercase tracking-wide hover:opacity-70 relative border-b-2${
                currentPath.startsWith('/short-films') ? 'pb-1 border-b-2 border-black' : 'border-white'
              }`}
              >Short Film</a
            > -->
            <a
              href="/others"
              class={`text-lg font-extrabold text-black uppercase tracking-wide hover:opacity-70 relative border-b-2${
                currentPath.startsWith("/others")
                  ? " border-black"
                  : "border-white"
              }`}>Others</a
            >
          </nav>

          <button
            id="mobile-menu-button"
            class="md:hidden flex flex-col space-y-1 p-2"
            aria-label="Toggle mobile menu"
          >
            <div class="w-6 h-0.5 bg-black"></div>
            <div class="w-6 h-0.5 bg-black"></div>
            <div class="w-6 h-0.5 bg-black"></div>
          </button>
        </div>

        <nav id="mobile-menu" class="hidden md:hidden">
          <div class="flex flex-col space-y-4 pt-6">
            <a
              href="/about"
              class={`text-lg font-extrabold text-black uppercase tracking-wide hover:opacity-70 relative `}
              >About</a
            >
            <a
              href="/commercials"
              class={`text-lg font-extrabold text-black uppercase tracking-wide hover:opacity-70 relative `}
              >Commercials</a
            >
            <a
              href="/others"
              class={`text-lg font-extrabold text-black uppercase tracking-wide hover:opacity-70 relative `}
              >Others</a
            >
          </div>
        </nav>
      </div>
    </header>
  </body>

  <main>
    <slot />
  </main>
</html>

<style>
  html,
  body {
    margin: 0;
    width: 100%;
    height: 100%;
  }
</style>

<script>
  document.addEventListener("DOMContentLoaded", function () {
    const mobileMenuButton = document.getElementById("mobile-menu-button");
    const mobileMenu = document.getElementById("mobile-menu");

    if (mobileMenuButton && mobileMenu) {
      mobileMenuButton.addEventListener("click", function () {
        mobileMenu.classList.toggle("hidden");
      });
    }
  });
</script>
